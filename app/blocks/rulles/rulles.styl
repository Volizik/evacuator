.rulles
	padding-top 60px
	padding-bottom 56px
	display block
	background url(../images/rulles-bg-left.png) no-repeat center left, url(../images/rulles-bg-right.png) no-repeat center right
	+below(2000px)
		background url(../images/rulles-bg-left.png) no-repeat left bottom -180px, url(../images/rulles-bg-right.png) no-repeat right bottom -40px
		background-size 22%, 45%
	+below(1400px)
		padding-bottom 150px
		background url(../images/rulles-bg-left.png) no-repeat left bottom -180px, url(../images/rulles-bg-right.png) no-repeat right bottom -80px
		background-size 22%, 45%
	+below(900px)
		padding-bottom 150px
		background url(../images/rulles-bg-left.png) no-repeat left bottom -100px, url(../images/rulles-bg-right.png) no-repeat right bottom -60px
		background-size 22%, 45%
	+below(600px)
		padding-top 25px
		background url(../images/rulles-bg-left.png) no-repeat left bottom -30px, url(../images/rulles-bg-right.png) no-repeat right bottom
		background-size 22%, 45%
	+below(400px)
		padding-bottom 50px
	.title
		+below(600px)
			text-align center
	&__wrap
		margin-left 68px
		+below(600px)
			margin-left 0
	&__desc
		margin-bottom 23px
		padding-top 9px
		line-height 17px
		+below(600px)
			text-align center
	&__list
		max-width 770px
		counter-reset counter
	&__item
		margin-bottom 23px
		display flex
		align-items flex-start
		line-height 18px
		&:before
			font-family sans-serif
			font-size 48px
			font-weight 700
			line-height 1
			content counter(counter)
			counter-increment counter
			+below(600px)
				font-size 30px
	&__text
		+below(600px)
			line-height 13px
	&__img
		margin-right 5px
		size(44px)
		object-fit contain
		+below(600px)
			size(25px)

