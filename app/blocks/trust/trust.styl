.trust
	margin -30px 0 50px
	height 555px
	background url(../images/trust-bg.png) center center no-repeat
	+below(992px)
		background url(../images/trust-bg.png) center right no-repeat
	+below(600px)
		margin-bottom 0
		height 400px
	.container
		display flex
		justify-content flex-end
		height 100%
	&__img
		position absolute
		left 80px
		bottom -48px
		+below(992px)
			display none
	&__text
		margin-top 94px
		display flex
		flex-direction column
		align-items center
		flex-basis 50%
		+below(992px)
			flex-basis 100%
		+below(600px)
			margin-top 60px
	&__text-wrap
		max-width 415px
	&__title
		font-family bebasBold
		font-size 84px
		+below(600px)
			font-size 44px
			text-align center
	&__subtitle
		margin-bottom 13px
		display flex
		flex-wrap wrap
		font-family latoReg
		font-size 25.24px
		+below(600px)
			font-size 18px
		span
			line-height 30px
		&-right
			margin-left auto
	&__paragraph
		margin-bottom 15px
		font-family LatoRegular
		font-size 14px
		line-height 17px
		+below(600px)
			font-size 10px
			line-height 12px
		strong
			font-family LatoBold
	.button
		margin-top 17px


