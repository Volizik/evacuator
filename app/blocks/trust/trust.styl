.trust
	margin -30px 0 50px
	height 555px
	background url(../images/trust-bg.png) center center no-repeat
	.container
		display flex
		justify-content flex-end
		height 100%
	&__img
		position absolute
		left 80px
		bottom -48px
	&__text
		margin-top 94px
		display flex
		flex-direction column
		align-items center
		flex-basis 50%
	&__text-wrap
		max-width 415px
	&__title
		font-family bebasBold
		font-size 84px
	&__subtitle
		margin-bottom 13px
		display flex
		flex-wrap wrap
		font-family latoReg
		font-size 25.24px
		span
			line-height 30px
		&-right
			margin-left auto
	&__paragraph
		margin-bottom 15px
		font-family LatoRegular
		font-size 14px
		line-height 17px
		strong
			font-family LatoBold
	.button
		margin-top 17px


