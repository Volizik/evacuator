.button
	position relative
	z-index 3
	padding 0 10px
	display inline-flex
	justify-content center
	align-items center
	min-width 194px
	height 35px
	font-family latoBlack
	font-size 14px
	text-transform uppercase
	color #fff
	background-color #4974dd
	flex-shrink 0
	box-shadow 3px 3px 10px rgba(0,0,0, .5)
	border none
	border-radius 7px
	transition .4s
	+below(600px)
		min-width 120px
		height 25px
		font-size 9px
	&:hover
		box-shadow none
