.overlay
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 100
	display none
	background-color rgba(0, 0, 0, .6)
.modal
	padding 45px 30px
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	display flex
	flex-direction column
	width 100%
	max-width 460px
	background-color #fff
	+below(600px)
		padding 30px 15px
		max-width 300px
	&__cross
		position absolute
		top 20px
		right 20px
		size(20px)
		background-color transparent
		border none
		cursor pointer
		+below(600px)
			top 10px
			right 10px
		&:hover
			&:before, &:after
				background-color #000
		&:before, &:after
			position absolute
			top 50%
			left 50%
			display block
			height 3px
			width 20px
			content ''
			background-color #555
			transition .4s
		&:before
			transform translate(-50%, -50%) rotate(45deg)
		&:after
			transform translate(-50%, -50%) rotate(-45deg)
	&__title
		font-size 22px
		font-weight 900
		text-transform uppercase
		text-align center
		+below(600px)
			font-size 18px
	&__subtitle
		margin-top 10px
		margin-bottom 25px
		font-size 18px
		font-weight 700
		text-align center
		line-height 25px
		+below(600px)
			margin-bottom 10px
			font-size 14px
			line-height 20px
	&__form
		display flex
		flex-direction column
		align-items center
		.button
			margin-top 10px
			margin-bottom 30px
			+below(600px)
				margin-top 0
				margin-bottom 15px
	&__input
		margin-bottom 15px
		padding 0 15px
		width 265px
		height 37px
		border 1px solid #acacac
		&::placeholder
			font-style italic
			color #000
	&__checkbox
		input[type='checkbox']
			display none
		input[type='checkbox']:checked + label:after
			display none
		label
			position relative
			display flex
			font-size 10px
			&:before
				margin-right 10px
				display block
				size(12px)
				flex-shrink 0
				content ''
				border 1px solid #000
			&:after
				position absolute
				top 3px
				left 3px
				size(8px)
				content ''
				background-color #000
			a
				color #000